<div class='form-center'>
<%= form_for @schedule do |f| %>
  <%= f.hidden_field :timetable_id, :value => params[:timetable_id] %>
<div class = 'form-group'>
  <%= f.time_select :hours, {:minute_step => 5} %>
  </div>
<div class = 'form-group'>
  <%= f.text_field :group, :placeholder => "Введіть назву групи", class: "form-control" %>
  </div>
  <div class = 'form-group'>
  <%= f.text_field :lesson, :placeholder => "Введіть назву уроку", class: "form-control" %>
  </div>
  <%= f.submit "Надіслати", class: "btn btn-lg btn-danger btn-submit" %>
<% end %>
</div>