<div class = 'jumbotron'>
<table class='table'>
  <tr>
    <th>День</th>
    <th>Час</th>
    <th>Група</th>
    <th>Заняття</th>
  </tr>
  <% @schedules.each do |schedule| %>
    <tr>
      <td><%= schedule.day %></td>
      <td><%= schedule.hours.strftime("%H:%M") %></td>
      <td><%= schedule.group %></td>
      <td><%= schedule.lesson %></td>
      <td><%= link_to "Відредагувати", edit_schedule_path(schedule) %></td>
      <td><%= link_to "Видалити", schedule, :confirm => 'Ви впевнені?', :method => :delete %></td>
      </tr>
  <% end %>
</table>
 <%= link_to 'Створити новий запис', new_schedule_path, :class => 'btn btn-lg btn-danger' %>
</div>