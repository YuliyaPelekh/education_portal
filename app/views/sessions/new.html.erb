<div class='form-center'>
<%= form_for(:session, url: login_path) do |f| %> 
  <div class = 'form-group'>
  <%= f.email_field :email, :placeholder => "Введіть email", class: "form-control" %> 
</div>
<div class = 'form-group'>
  <%= f.password_field :password, :placeholder => "Введіть пароль", class: "form-control" %>
  </div>
  <%= f.submit "Ввійти", class: "btn btn-lg btn-danger btn-submit" %>
<% end %>
</div>