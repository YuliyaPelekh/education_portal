<div class='form-center'>
  <h1>Зареєструйтесь, будь-ласка</h1>  
  <%= form_for(@user) do |f| %>
  <div class='form-group form-inline'>
    <div class="form-group"> 
      <%= f.text_field :first_name, :placeholder => "Введіть ім'я", class: "form-control", :required => true %>
    </div>
    <div class="form-group"> 
      <%= f.text_field :last_name, class: "form-control", :placeholder => 'Введіть прізвище', :required => true %>
    </div>
  </div>
    <div class='form-group'>
      <%= f.text_field :email, class: "form-control", :placeholder => "Введіть електронну пошту", :required => true %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password, class: "form-control", :placeholder => "Введіть пароль", :required => true %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password_confirmation, class: "form-control", :placeholder => "Підтвердіть пароль", :required => true %>
    </div>
      <%= f.submit "Створити мій аккаунт", class: "btn btn-large btn-danger" %>
   <% end %>
 </div>
